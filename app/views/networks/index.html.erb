<%= render partial: 'layouts/navbar' %>

<div class="container bg-light p-4">
  <div class="page-header">
    <div class="btn-toolbar pull-right">
      <div class="btn-group">
        <%= link_to "#{icon('bi-plus-square-dotted')} Add".html_safe, {controller: 'network', action: 'add'}, class: 'btn btn-primary' %>
      </div>
    </div>

    <h1>Networks</h1>

    <hr>
  </div>

  <p>
    Bellow are your networks:
  </p>

  <% if @networks.empty? %>
    <div class="alert alert-warning" role="alert">
      You have no networks added to your account! Please add one.
    </div>
  <% else %>
    <%= render partial: 'list' %>
  <% end %>
</div>