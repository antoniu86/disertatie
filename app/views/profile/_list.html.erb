<table class="table table-hover">
  <thead>
    <th></th>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td>
          <%= device.name %>: <%= icon 'bi-arrow-down' %>
        </td>
      </tr>

      <tr>
        <td colspan="3">
          <div class="container">
            <div class="row">
              <div class="col">
                <b>Soil humidity:</b> <%= device.soil_humidity %>
                <br>
                <b>Water at soil humidity of:</b> <%= device.water_at %>
                <br>
                <b>Description:</b> <%= device.description %>
              </div>

              <div class="col">
                <b>Room temperature:</b> <%= device.temperature %>&#8451;
                <br>
                <b>Room humidity:</b> <%= device.humidity %>%
                <br>
                <b>Last watered at:</b> <%= device.watered_at %>
              </div>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>