<%= render partial: 'layouts/navbar' %>

<div class="container bg-light p-4">
  <div class="page-header">
    <% if current_user.has_networks? %>
      <div class="btn-toolbar pull-right">
        <div class="btn-group">
          <%= link_to "#{icon('bi-plus-square-dotted')} Add".html_safe, {controller: 'device', action: 'add'}, class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>

    <h1>Devices</h1>

    <hr>
  </div>

  <p>
    Bellow are your devices:
  </p>

  <% unless current_user.has_networks? %>
    <div class="alert alert-danger" role="alert">
      Before adding a device your need to first add a network! Please add one from <%= link_to 'here', '/networks' %>.
    </div>
  <% else %>
    <% if current_user.devices.empty? %>
      <div class="alert alert-warning" role="alert">
        You have no devices added to your account! Please add one.
      </div>
    <% else %>
      <%= render partial: 'devices/list' %>
    <% end %>
  <% end %>
</div>