<%= form_tag(@form_options, class: 'form-signin') do %>
  <%= image_tag 'logo.svg', width: 72, height: 72, class: 'mb-4' %>
  <h1 class="h3 mb-3 font-weight-normal">Alexa Account Linking</h1>

  <% if @error %>
    <p style="color:red"><%= @error %></p>
  <% end %>

  <% if @user %>
    <%= render partial: 'alexa_authorize/grant_fields' %>
  <% else %>
    <%= render partial: 'alexa_authorize/login_fields' %>
  <% end %>
<% end %>